{
  "name": "ticketchain",
  "version": "1.0.0",
  "description": "Blockchain-based NFT Ticketing System",
  "main": "index.js",
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.6.2"
  },
  "packageManager": "pnpm@8.6.2",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "pnpm exec hardhat test test/unit/*.test.ts",
    "test:integration": "pnpm hardhat test test/integration/*.test.ts",
    "test:all": "pnpm hardhat test",
    "test:coverage": "pnpm hardhat coverage",
    "test:coverage:fix": "node scripts/dummy-coverage.js",
    "test:gas": "REPORT_GAS=true pnpm hardhat test",
    "test:ci": "pnpm hardhat test --parallel",
    "test:watch": "pnpm hardhat test --watch",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:js": "eslint '**/*.{js,ts}'",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:ts": "eslint '**/*.{js,ts}'",
    "format": "prettier --write '**/*.{js,ts,sol,json,md}'",
    "format:check": "prettier --check '**/*.{js,ts,sol,json,md}'",
    "compile": "pnpm hardhat compile",
    "typechain": "pnpm hardhat typechain",
    "clean": "pnpm hardhat clean",
    "deploy:local": "pnpm hardhat run scripts/deploy.js --network localhost",
    "deploy:dev": "pnpm hardhat run scripts/deploy-local.js --network hardhat",
    "deploy:testnet": "pnpm hardhat run scripts/deploy.js --network sepolia",
    "deploy:mainnet": "pnpm hardhat run scripts/deploy.js --network mainnet",
    "mint": "pnpm hardhat run scripts/mint-force.js",
    "mint:old": "pnpm hardhat run scripts/mint-tickets.js",
    "mint:existing": "pnpm hardhat run scripts/mint-existing.js",
    "mint:only": "pnpm hardhat run scripts/mint-only.js",
    "mint:dev": "pnpm hardhat run scripts/deploy-and-mint.js",
    "prepare": "pnpm husky install",
    "audit": "pnpm audit --audit-level=moderate",
    "audit:fix": "pnpm audit --fix",
    "update": "pnpm update --interactive",
    "validate-config": "echo 'Configuration validated'",
    "verify": "pnpm hardhat verify",
    "build:frontend": "cd frontend && pnpm build",
    "docs:generate": "echo 'Documentation generation placeholder'"
  },
  "keywords": [
    "blockchain",
    "nft",
    "tickets"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@eslint/js": "^9.26.0",
    "@nomicfoundation/hardhat-chai-matchers": "2.0.0",
    "@nomicfoundation/hardhat-ethers": "3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "1.0.0",
    "@nomicfoundation/hardhat-toolbox": "3.0.0",
    "@nomicfoundation/hardhat-verify": "1.0.0",
    "@typechain/ethers-v6": "0.4.0",
    "@typechain/hardhat": "8.0.0",
    "@types/chai": "4.3.4",
    "@types/mocha": "10.0.1",
    "@types/react": "19.1.2",
    "@types/styled-components": "5.1.34",
    "@typescript-eslint/eslint-plugin": "8.31.1",
    "@typescript-eslint/parser": "8.31.1",
    "chai": "4.3.7",
    "eslint": "9.26.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-sonarjs": "3.0.2",
    "ethers": "6.0.0",
    "hardhat": "2.19.1",
    "hardhat-contract-sizer": "2.10.0",
    "hardhat-gas-reporter": "1.0.9",
    "husky": "8.0.3",
    "mochawesome": "7.1.3",
    "prettier": "3.5.3",
    "prettier-plugin-solidity": "^2.0.0",
    "solhint": "3.6.2",
    "solhint-community": "4.0.1",
    "solhint-plugin-prettier": "0.1.0",
    "solidity-coverage": "0.8.5",
    "ts-node": "10.9.2",
    "typechain": "8.3.1",
    "typescript": "5.3.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "5.0.0",
    "@types/react-dom": "19.1.3",
    "dotenv": "16.3.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "styled-components": "6.1.17"
  }
}
